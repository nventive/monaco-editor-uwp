<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <WasmHead>true</WasmHead>
    <DefineConstants>$(DefineConstants);__WASM__</DefineConstants>
    <NoWarn>NU1701</NoWarn>
	  <LangVersion>8.0</LangVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <MonoRuntimeDebuggerEnabled>true</MonoRuntimeDebuggerEnabled>
    <DefineConstants>$(DefineConstants);TRACE;DEBUG</DefineConstants>
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="Assets\SplashScreen.png" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="WasmCSS\Fonts.css" />
    <EmbeddedResource Include="WasmScripts\AppManifest.js" />
  </ItemGroup>
  <ItemGroup>
    <LinkerDescriptor Include="LinkerConfig.xml" />
  </ItemGroup>
  <ItemGroup>
    <!--
    This item group is required by the project template because of the
    new SDK-Style project, otherwise some files are not added automatically.

    You can safely remove this ItemGroup completely.
    -->
    <None Include="Program.cs" />
    <None Include="LinkerConfig.xml" />
    <None Include="wwwroot\web.config" />
  </ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="..\MonacoEditorComponent\monaco-editor\min\vs\loader.js">
			<Link>WasmScripts\monaco-editor\min\vs\loader.js</Link>
		</EmbeddedResource>
		<Content Include="..\MonacoEditorComponent\ts-helpermethods\*.ts">
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<Content Include="..\MonacoEditorComponent\ts-helpermethods-wasm\*.ts">
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<Content Include="..\MonacoEditorComponent\ts-helpermethods\*.js.map">
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<Content Include="..\MonacoEditorComponent\ts-helpermethods-wasm\*.js.map">
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<EmbeddedResource Include="..\MonacoEditorComponent\ts-helpermethods\*.js">
			<Link>WasmScripts\ts-helpermethods\%(RecursiveDir)%(Filename)%(Extension)</Link>
		</EmbeddedResource>
		<EmbeddedResource Include="..\MonacoEditorComponent\ts-helpermethods-wasm\*.js">
			<Link>WasmScripts\ts-helpermethods\%(RecursiveDir)%(Filename)%(Extension)</Link>
		</EmbeddedResource>

		<Content Include="..\MonacoEditorComponent\monaco-editor\**\*">
			<Link>monaco-editor\%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<!--<Content Include="..\MonacoEditorComponent\ts-helpermethods\**\*">
			<Link>ts-helpermethods\%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>-->
	</ItemGroup>
  <ItemGroup>
    <!-- Note that for WebAssembly version 1.1.1 of the console logger required -->
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Filter" Version="1.1.1" />
    <PackageReference Include="Uno.UI" Version="2.4.4" />
    <PackageReference Include="Uno.UI.RemoteControl" Version="2.4.4" Condition="'$(Configuration)'=='Debug'" />
    <PackageReference Include="Uno.Wasm.Bootstrap" Version="1.3.0-dev.44" />
    <PackageReference Include="Uno.Wasm.Bootstrap.DevServer" Version="1.3.0-dev.44" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\MonacoEditorComponent\MonacoEditorComponent.csproj" />
  </ItemGroup>
  <Import Project="..\MonacoEditorTestApp.Shared\MonacoEditorTestApp.Shared.projitems" Label="Shared" Condition="Exists('..\MonacoEditorTestApp.Shared\MonacoEditorTestApp.Shared.projitems')" />
</Project>